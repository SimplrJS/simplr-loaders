{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "declaration": true,
    "declarationDir": "@types",
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "example",
    "dist"
  ]
}